<div class="col-md-10 col-xs-12 col-sm-9">
  <div id="user-show">
    <div class="page-header">
      <h3><%= @user.name %></h3>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div><%= render partial: "user_field", locals: { user: @user} %></div>
        <div class="button-padding pull-right">
          <%= link_to "Back to index", users_path, class: "btn btn-default" %>
          <%= link_to "Edit", edit_user_path(@user), class: "btn btn-info" %>
        </div>
      </div>
    </div>
</div>
