<%
# Required local params
# @param user [User] an instance of User to render the form for.
%>

<%= simple_form_for user, html: {class: "form-horizontal" },
  wrapper: :horizontal_form,
  wrapper_mappings: {
  } do |f| %>

  <%= f.input :email %>
  <%= f.input :name %>
  <%= f.input :roles, collection: User::ROLES, :selected => @role.id %>

  <div class="button-padding pull-right">
    <%= link_to "Back to index", users_path, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
