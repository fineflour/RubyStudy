<%
    # Required local params
  # @param user [User] an instance of User to render the form for.
%>

<%= simple_form_for indication, 
  html: {class: "form-horizontal" },
  wrapper: :horizontal_form,
  wrapper_mappings: {
  } do |f| %>

  <div class="row">
    <fieldset >
      <div class="col-md-10 text-left form-inline">
        <label>Related Organs</label>
        <%= f.association :zangfus, as: :check_boxes, collection: Zangfu.order(:name_eng), label: false, :label_method => :name_eng, :value_method => :id,  :item_wrapper_class => 'checkbox-container'%>
      </div>
    </fieldset>
    <fieldset>
      <div class="col-md-10">
        <%= f.input :name_eng, :input_html => {:size => 200, :maxlength => 255} %>
        <%= f.input :name_ko, :input_html => {:size => 200, :maxlength => 255} %>
        <%= f.input :description, as: :text %>
      </div>
    </fieldset>
    <fieldset>
      <div class="panel panel-default">
        <div class="panel-heading"><label>Sub Indications</label> <%= link_to "", new_subindication_path, class: "glyphicon glyphicon-plus" %>

      </div>
        <div class="panel-body">
          <div class="col-md-10 text-left form-inline">
            <%= f.association :subindications, as: :check_boxes, label: false, collection: Subindication.order(:name_eng), :label_method => :name_eng, :value_method => :id, :item_wrapper_class => 'checkbox-container' %>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="button-container text-right">
    <%= link_to "Back to index", indications_path, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
