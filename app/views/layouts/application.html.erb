<!DOCTYPE html>
<html>
<head>
  <title>My OM</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "application", "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="page-container">
      <!-- top navbar -->
      <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href='/'>Fineflour</a>
        </div>
        <div class="pull-right user-info">
          <% if current_user %>
            <%= link_to "#{current_user.email}", edit_user_registration_path %> | 
            <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path %>
          <% end %>
        </div>
      </div>
      <div class="row row-offcanvas row-offcanvas-left">
      <!-- sidebar -->
        <div class="col-md-2 col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation"> 
        <% if current_user %>
          <ul class="nav">
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Points", points_path %></li>
            <li><%= link_to "Indications", indications_path %></li>
            <li><%= link_to "Diseases", diseases_path %></li>
            <% if policy(current_user).index? %>
              <li><%= link_to "User Accounts", users_path %></li>
            <% end %>
          </ul>
        <% end %>
        </div>

      <!-- flash notice -->
      <div class="col-md-9 col-xs-12 col-sm-9">
        <% if flash[:notice] %>
          <div class="alert alert-success top-general-alert">
            <a type="button" class="close" data-dismiss="alert">&times;</a>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:error] %>
          <div class="alert alert-danger top-general-alert">
            <a type="button" class="close" data-dismiss="alert">&times;</a>
            <%= flash[:error] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger top-general-alert">
            <a type="button" class="close" data-dismiss="alert">&times;</a>
            <%= flash[:alert] %>
          </div>
        <% end %>
      </div><!-- flash notice -->
      <br>
      <!-- container -->
      <div class="col-md-10 col-xs-12 col-sm-9">
        <%= yield %>
      </div><!-- container -->
    </div>
  </body>
</html>
