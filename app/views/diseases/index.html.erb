<div class="col-md-10 col-xs-12 col-sm-9">
  <div class="page-header">
    <h1>Disease</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "Add new", new_disease_path, class: "btn btn-info" %>
        </div>

        <div class="table-responsive">
          <table id="users" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
              <% @diseases.each do |i| %>
                <tr id="disease-<%= i.id %>">
                  <td><%= i.name_eng %></td>
                  <td>
                    <%= link_to "Edit", edit_disease_path(i) %> | 
                    <%= link_to "Delete", disease_path(i), method: :delete, data: { confirm: 'Are you sure that you want to delete?'} %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <span class="pull-right">
        <%= will_paginate @disease, renderer: BootstrapPagination::Rails %>
      </span>
      </div>
    </div>
  </div>
</div>
